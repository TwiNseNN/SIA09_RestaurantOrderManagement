@model IEnumerable<RestaurantManagementOrder.Models.IUser>

@{
    ViewData["Title"] = "All users";
}

<h1>All users</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Type-@item.UserId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Type-@item.UserId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Type-@item.UserId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
